<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_sale_commission_view" model="ir.actions.act_window">
        <field name="name">Comisiones de Venta</field>
        <field name="res_model">sale.commission</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="view_sale_commission_list" model="ir.ui.view">
        <field name="name">sale.commission.list</field>
        <field name="model">sale.commission</field>
        <field name="arch" type="xml">
            <list string="Comisiones de Venta">
                <field name="name"/>
                <field name="date"/>
                <field name="partner_id"/>
                <field name="sale_id"/>
                <field name="amount_total" sum="Total Venta"/>
                <field name="commission_percentage"/>
                <field name="commission_amount" sum="Total Comisión"/>
                <field name="currency_id" invisible="1"/>
            </list>
        </field>
    </record>

    <record id="view_sale_commission_form" model="ir.ui.view">
        <field name="name">sale.commission.form</field>
        <field name="model">sale.commission</field>
        <field name="arch" type="xml">
            <form string="Comisión de Venta">
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="date"/>
                        </group>
                        <group>
                            <field name="sale_id"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="commission_details" string="Detalles de la Comisión">
                            <group>
                                <field name="amount_total"/>
                                <field name="commission_percentage"/>
                                <field name="commission_amount"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>